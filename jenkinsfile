pipeline {
      agent { node { label 'agent-1' } }
       environment { 
        USER = 'sivakumar'
     }
      stages {
        stage('Example') {
            environment { 
                auth = credentials('ssh-auth') 
            }
            steps {
                sh 'printenv'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''ls -ltr
                pwd
                 echo 'hello'
                 '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                //error 'failed'
            }
        }
    }
      post { 
        always { 
            echo 'I will always run whether job is success or not'
        }
        success{
            echo 'I will run only when job is success'
        }
        failure{
            echo 'I will run when failure'
        }
    }
}